{
  "name": "connectors/http",
  "description": "Provides an HTTP connector for Porter.",
  "authors": [
    {
      "name": "Bilge",
      "email": "bilge@scriptfusion.com"
    }
  ],
  "license": "LGPL-3.0",
  "require": {
    "amphp/http-client": "^3",
    "connectors/ssl": "^2",
    "phptype/string": "^1",
    "scriptfusion/porter": "^5"
  },
  "require-dev": {
    "amphp/phpunit-util": "^1.2",
    "infection/infection": ">=0.13.6",
    "mockery/mockery": "^1",
    "phpunit/phpunit": "^7.1.3",
    "symfony/process": "^3.3"
  },
  "autoload": {
    "psr-4": {
      "ScriptFUSION\\Porter\\Net\\Http\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ScriptFUSIONTest\\": "test"
    }
  },
  "scripts": {
    "test": "phpunit -c test"
  },
  "config": {
    "platform": {
      "php": "7.1.99"
    },
    "sort-packages": true
  }
}
